<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <style>
    body {
      font-family: 'Roboto', Arial, sans-serif;
      background-color: #121212;
      color: white;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #000;
      padding: 10px;
      display: flex;
      align-items: center;
    }

    .logo {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: cover;
    }

    nav a {
      margin: 0 15px;
      color: white;
      text-decoration: none;
    }

    main {
      padding: 20px;
      max-width: 600px;
      margin: auto;
    }

    .playlists-container {
      background-color: #282828;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      margin-bottom: 20px;
    }

    .playlists-list {
      list-style-type: none;
      padding: 0;
    }

    .playlist-item {
      display: flex;
      align-items: center;
      background-color: #1db954;
      border-radius: 5px;
      padding: 10px;
      margin: 10px 0;
      transition: background-color 0.3s;
      justify-content: space-between;
    }

    .playlist-item:hover {
      background-color: #17a34a;
    }

    .playlist-link {
      text-decoration: none;
      color: white;
      font-weight: bold;
      margin-left: 10px;
    }

    .playlist-icon {
      font-size: 1.5em;
      color: white;
    }

    .delete-button {
      background-color: #ff4d4d;
      border: none;
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
    }

    .delete-button:hover {
      background-color: #ff1a1a;
    }

    .create-playlist-form {
      display: flex;
      flex-direction: column;
      margin-top: 20px;
    }

    .playlist-input {
      padding: 10px;
      margin-bottom: 10px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
    }

    .create-button {
      background-color: #1db954;
      border: none;
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
      display: flex;
      align-items: center;
      transition: background-color 0.3s;
      width: auto;
      max-width: 150px;
      font-size: 16px;
      height: 35px;
    }

    .create-button i {
      margin-right: 5px;
    }

    .create-button:hover {
      background-color: #17a34a;
    }
  </style>
</head>
<body>
  <header>
    <img src="/logo.png" alt="Spotify Logo" class="logo">
    <nav>
        <a href="/"><i class="fas fa-home"></i>Home</a>
        <a href="/library"><i class="fas fa-folder"></i>Library</a>
        <a href="/upload"><i class="fas fa-upload"></i>Upload Music</a>
    </nav>
  </header>

  <main>
    <h1>Your Playlists</h1>
    <div class="playlists-container">
      <ul class="playlists-list">
        <% playlists.forEach(playlist => { %>
          <li class="playlist-item">
            <div style="flex-grow: 1;">
              <i class="fas fa-music playlist-icon"></i>
              <a href="/playlist/<%= playlist.id %>" class="playlist-link"><%= playlist.name %></a>
            </div>
            <form action="/delete-playlist/<%= playlist.id %>" method="POST" style="margin-left: 10px;">
              <button type="submit" class="delete-button">
                <i class="fas fa-trash-alt"></i> Delete
              </button>
            </form>
          </li>
        <% }); %>
      </ul>
    </div>

    <h2>Create a New Playlist</h2>
    <form action="/create-playlist" method="POST" class="create-playlist-form">
      <input type="text" name="playlistName" placeholder="New Playlist Name" required class="playlist-input">
      <button type="submit" class="create-button">
        <i class="fas fa-plus"></i> Create Playlist
      </button>
    </form>
  </main>
</body>
</html>
